// Also check http://en.znc.in/wiki/Configuration

AnonIPLimit = 10
ConnectDelay = 5
<%- if @global_modules -%>
<%- @global_modules.each do |global_module| -%>
LoadModule = <%= global_module %>
<%- end -%>
<%- end -%>
<% if @auth_type == 'sasl' -%>
LoadModule = saslauth saslauthd
<% end -%>
MaxBufferSize = <%= @max_buffer_size %>
<% if @motd -%>
Motd = <%= @motd %>
<% end -%>
ProtectWebSessions = true
<% if @ssl==true -%>
SSLCertFile = <%= scope.lookupvar('::znc::params::zc_config_dir') %>/znc.pem
<% end -%>
ServerThrottle = 30
Skin = _default_
StatusPrefix = *
Version = 1.4

<Listener listener0>
        AllowIRC = true
        AllowWeb = true
        Port = <%= @port %>
        IPv4 = true
        IPv6 = <%= @ipv6 %>
        SSL = <%= @ssl %>
</Listener>

